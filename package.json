{
  "name": "@lchhzz/view-deploy",
  "version": "1.0.2",
  "description": "一个可自定义的 SSH 部署工具，支持前端项目部署，自动转换 Windows/Unix 命令",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "view-deploy": "dist/cli.js",
    "cl-vd": "dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "cl-vd": "tsx src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "cli": "node dist/cli.js",
    "postinstall": "node dist/setup.ts",
    "deploy": "npm run cl-vd -- deploy",
    "deploy:init": "npm run cl-vd -- init",
    "deploy:config": "npm run cl-vd config --",
    "deploy:test": "npm run cl-vd test --"
  },
  "keywords": [
    "deploy",
    "ssh",
    "automation",
    "cli"
  ],
  "author": "cl",
  "license": "MIT",
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/ssh2": "^1.15.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^11.0.0",
    "inquirer": "^9.0.0",
    "ssh2": "^1.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/luochuanccc/cl-deploy?source=header_my_projects"
  }
}
